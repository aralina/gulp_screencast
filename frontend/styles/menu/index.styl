.menu

  margin 10px
  font-size 20px

  &__list
    padding 0
    margin 0 0 0 40px
    display none

  &__title-icon
    background url(closed.png)
    background-position 0 100%
    display inline-block
    width 16px
    height 16px

  &_open &__title-icon
    background url(open.png)
    background-position 0 100%
    display inline-block
    width 16px
    height 16px

  &_open &__list
      display block
